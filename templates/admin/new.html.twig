{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_post_new' %}

{% block main %}
    <h1>{{ 'title.post_new'|trans }}</h1>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.position) }}
        {{ form_row(form.created_at) }}
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_main') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Назад
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
